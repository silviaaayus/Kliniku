<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookingJadwal.AmbilNoAntrianActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_second" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:id="@+id/cardview_ambilAntrian"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/schedule_dentist"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tanggal_noantrian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Senin, 22 Februari 2021"
                                android:textColor="?colorPrimary"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_marginTop="@dimen/_2sdp"
                                android:id="@+id/jam_noantrian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jam 10.00-12.00"
                                android:textColor="?colorPrimary"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#6C6969"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:gravity="center"
                                android:textColor="?colorPrimary"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="10"
                                android:textStyle="bold"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/black"
                                android:id="@+id/total"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Terpanggil"
                                android:textStyle="bold"
                                android:textColor="?colorPrimary"/>
                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="6"
                                android:textStyle="bold"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/black"
                                android:id="@+id/terpanggil"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="Antrian"
                                android:textColor="?colorPrimary"/>
                            <TextView
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/_25sdp"
                                android:text="4"
                                android:textColor="@color/black"
                                android:id="@+id/antrian"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#6C6969"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pilih Pasien:"
                android:textColor="?colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <RadioGroup
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rd_PilihPasien">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pasien Baru"
                    android:id="@+id/rd_PasienBaru"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pasien Lama"
                    android:id="@+id/rd_PasienLama"/>
            </RadioGroup>


            <include
                android:id="@+id/pendaftaran"
                layout="@layout/form_pendaftaranpasien" />

            <include
                android:id="@+id/layout_cari"
                layout="@layout/form_caripasien" />



            <Button
                android:id="@+id/btn_antrian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/edmain"
                android:textColor="@color/white"
                android:text="Ambil Antrian"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>