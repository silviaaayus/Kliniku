<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Antrian.NoAntrianActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_second" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:id="@+id/cardview_ambilAntrian"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/schedule_dentist"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tgl_noantrian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kamis, 18 Maret 2021"
                            android:textColor="?colorPrimary"
                            android:textSize="@dimen/_15sdp"
                            />
                        <TextView
                            android:id="@+id/jamantrian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jam 10.00-12.00"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            />
                        <TextView
                            android:id="@+id/poli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poliklinik Gigi"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#6C6969"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Antrian"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_20sdp"
                        android:textColor="?colorPrimary"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />
                    <TextView
                        android:id="@+id/noantrian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_25sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#6C6969" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pasien "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/namaantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silvia"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIK "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/nikantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTL "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/ttlantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/jekelantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pasien "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/alamatantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No HP "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/nohpantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email "
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/emailantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="085356417771"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="?colorPrimary"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>