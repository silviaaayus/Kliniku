<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    tools:context=".RegisterActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar"
                    android:textColor="?colorOnSecondary"
                    android:textSize="@dimen/_35sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="Daftar Di Sini Untuk Dapat Masuk"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_namauser_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Nama Lengkap"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true" />
                <EditText
                    android:id="@+id/edt_nik"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="NIK"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/datepicker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Tanggal Lahir"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_login"
                    android:layout_marginBottom="10dp">
                    <Spinner
                        android:id="@+id/edt_jekel_register"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:hint="Jenis Kelamin"
                        android:inputType="text"
                        android:padding="10dp"
                        android:singleLine="true"
                        />
                </RelativeLayout>


                <EditText
                    android:id="@+id/edt_alamatuser_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Alamat"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true" />
                <EditText
                    android:id="@+id/edt_telpuser_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Telepon"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edt_emailuser_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Email"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edt_username_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edt_pass_register"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_login"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/btn_daftar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textColor="@color/white"
                    android:text="Daftar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sudah Punya akun? "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masuk Di sini"
                        android:textColor="?colorPrimary"
                        android:id="@+id/txt_Login"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>