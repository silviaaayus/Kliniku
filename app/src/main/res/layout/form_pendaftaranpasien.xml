<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:id="@+id/formDaftar">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Pasien"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:textSize="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <EditText
            android:id="@+id/edt_namaPasien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>

        <EditText
            android:id="@+id/edt_nikPasien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:hint="NIK"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>

    <EditText
        android:id="@+id/edt_ttl_pasien"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_login"
        android:hint="TTL"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/material_on_background_disabled"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login"
            android:layout_marginBottom="10dp">
            <Spinner
                android:id="@+id/edt_jekelPasien"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_35sdp"
                android:hint="Jenis Kelamin"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true" />
        </RelativeLayout>
        <EditText
            android:id="@+id/edt_alamatpasien"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:hint="Alamat Pasien"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>
        <EditText
            android:id="@+id/edt_nohp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:hint="No HP"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_login"
            android:hint="Email"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/material_on_background_disabled"/>
    </LinearLayout>

